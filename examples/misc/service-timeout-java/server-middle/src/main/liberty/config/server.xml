<server description="KAR serivce timeout backend server">

  <featureManager>
    <feature>jaxrs-2.1</feature>
    <feature>jsonb-1.0</feature>
    <feature>mpHealth-2.1</feature>
    <feature>mpConfig-1.3</feature>
    <feature>mpRestClient-1.3</feature>
    <feature>beanValidation-2.0</feature>
    <feature>cdi-2.0</feature>
    <feature>concurrent-1.0</feature>
  </featureManager>

  <variable name="default.http.port" defaultValue="${env.KAR_APP_PORT}" />
  <variable name="default.https.port" defaultValue="-1" />

  <httpEndpoint httpPort="${default.http.port}" httpsPort="${default.https.port}"
                id="defaultHttpEndpoint" host="*" />

  <webApplication location="kar-timeout-server-middle.war" contextRoot="/"/>

</server>
