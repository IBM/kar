<server description="Sample Liberty server">

  <featureManager>
    <feature>jaxrs-2.1</feature>
    <feature>jsonb-1.0</feature>
    <feature>mpHealth-2.1</feature>
    <feature>mpConfig-1.3</feature>
    <feature>mpRestClient-1.3</feature>
    <feature>beanValidation-2.0</feature>
    <feature>cdi-2.0</feature>
    <feature>concurrent-1.0</feature>
    <feature>mpOpenTracing-1.3</feature>
    <feature>servlet-4.0</feature>
  </featureManager>

  <variable name="default.http.port" defaultValue="9090"/>
  <variable name="default.https.port" defaultValue="9443"/>
  
  <httpEndpoint host="*" httpPort="${default.http.port}" httpsPort="${default.https.port}"
                id="defaultHttpEndpoint">
         <tcpOptions reuse="true"/>
  </httpEndpoint>

  <logging consoleLogLevel="INFO" traceFileName="mytrace.log"/>

  <webApplication location="kar-example-client.war" contextRoot="Example"/>
</server>
